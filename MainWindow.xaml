<Window x:Class="YearProgress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Year Progress"
        SizeToContent="Width"
        Height="32"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Topmost="True"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style x:Key="Win10RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Foreground" Value="#00C853"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <Grid ClipToBounds="True">
                                <Rectangle x:Name="PART_Track" Fill="Transparent"/>
                                <Rectangle x:Name="PART_Indicator"
                                           Fill="{TemplateBinding Foreground}"
                                           RadiusX="4" RadiusY="4"
                                           RenderTransformOrigin="0,0.5"
                                           HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder"
        CornerRadius="8"
        Background="#000000"
        BorderBrush="#2A2A2A"
        BorderThickness="1"
        Padding="6,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- Title + Percent Texts -->
                <ColumnDefinition Width="5"/>    <!-- Gap -->
                <ColumnDefinition Width="Auto"/>  <!-- Progress bar -->
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">

                <TextBlock x:Name="TitleText"
                        FontFamily="Segoe UI, Arial, sans-serif"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#FFFFFF"
                        VerticalAlignment="Center"
                        Text="Year Progress:"/>

                <TextBlock x:Name="PercentText"
                        FontFamily="Segoe UI, Arial, sans-serif"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#FFFFFF"
                        VerticalAlignment="Center"
                        Margin="6,0,0,0"
                        Text="0.000%"/>
            </StackPanel>

            <ProgressBar x:Name="YearProgressBarControl"
                        Grid.Column="2"
                        Width="220"
                        Minimum="0"
                        Maximum="100"
                        Style="{StaticResource Win10RoundedProgressBar}"
                        VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
